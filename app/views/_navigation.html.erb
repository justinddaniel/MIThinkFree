<% if current_user %>
  <p> Welcome <%= current_user.email %>!</p><br>
  <%= button_to 'Home', root_path, method: 'get' %><br>
  <%= button_to 'Discussion Board', posts_path, method: 'get' %><br>
  <%= button_to "Your Homepage", current_user, method: 'get' %><br>
  <%= button_to "Sign Out", 'users/sign_out', method: 'delete' %>
<% else %>
  <%= button_to "Log In", 'users/sign_in' %><br>
  <%= button_to "Sign Up", 'users/sign_up', method: 'get' %>
<% end %>
