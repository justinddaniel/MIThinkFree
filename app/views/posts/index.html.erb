<h1> Here is what we are talking about! </h1>

<% @posts.each do |post| %>
  <h3> <%= post.title %> </h3><br>
  <p> <%= post.body %> </p> <br>
  <p> posted by: <%= post.user.email %> </p> <br><br>

  <% post.comments.each do |comment| %>
    <p> <%= comment.user.email %> replied: </p><br>
    <p> <%= comment.body %> </p><br>
  <% end %>

  <%= button_to "Comment on this post", "posts/#{post.id}/comments/new", method: 'get' %>

<% end %>

<p> Create a new post </p>

<%= button_to "New Post", '/posts/new', method: 'get' %>
