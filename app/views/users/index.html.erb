<h1> Listing of member blog pages </h1>

<p> <%= @users.count %> blogs and counting! </p>

<% @users.each do |user| %>
  <% if user.profile %>
    <% if !user.profile.real_name.empty? %>
      <% name = user.profile.real_name %>
    <% else %>
      <% name = user.profile.alias %>
    <% end %>
    <%= button_to "See #{name}'s blog", user_path(user.id), method: 'get' %><br>
  <% else %>
    <%= button_to "See #{user.email} blog", user_path(user.id), method: 'get' %><br>
  <% end %>
<% end %>

<div>
  <%= render partial: '/navigation' %>
</div>
